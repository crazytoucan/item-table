{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["dom", "es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "outDir": "esm",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2017"
  },
  "include": ["src", "typings"]
}
